%div.side-section
  %div.chat-user
    %h5 Yuko
    %div.chat-user__actions
      %a.chat-user__action
        %i.fa.fa-edit.fa-lg
      %a.chat-user__action
        %i.fa.fa-cog.fa-lg
  %ul.chat-group
    %li.chat-group__list
      %p.chat-group__name Sample
      %p.chat-group__comment hello!
    %li.chat-group__list
      %p.chat-group__name Sample
